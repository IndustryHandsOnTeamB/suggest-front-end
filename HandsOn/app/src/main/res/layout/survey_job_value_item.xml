<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mstb="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_survey_job_value_question"
        android:text="1. 자신에게 더 중요한 가치가 무엇인지 표시하세요. "
        android:textSize = "15dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mstb_btn"
        tools:ignore="MissingConstraints" />

    <org.honorato.multistatetogglebutton.MultiStateToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mstb_btn"
        mstb:values="@array/jobvalue_btn_array"
        mstb:mstbPrimaryColor="@color/button_primary_color"
        mstb:mstbSecondaryColor="@color/button_secondary_color"
        app:layout_constraintTop_toBottomOf="@id/text_survey_job_value_question"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>