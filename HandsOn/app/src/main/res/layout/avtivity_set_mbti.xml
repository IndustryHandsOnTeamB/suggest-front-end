<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MbtiActivity">

    <TextView
        android:id="@+id/mbti_link"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColorLink="@color/mainColor"
        android:text="MBTI 검사 하러 가기"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/mbti_link">

        <Button
            android:id="@+id/i_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="I"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/n_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:text="N"
            android:textSize="40dp"/>
        <Button
            android:id="@+id/t_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:text="T"
            android:textSize="40dp"/>
        <Button
            android:id="@+id/j_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:text="J"
            android:textSize="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/first_row">

        <Button
            android:id="@+id/e_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:text="E"
            android:textSize="40dp"/>

        <Button
            android:id="@+id/s_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:text="S"
            android:textSize="40dp"/>
        <Button
            android:id="@+id/f_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:text="F"
            android:textSize="40dp"/>
        <Button
            android:id="@+id/p_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="3dp"
            android:background="@drawable/button_lightgray"
            android:text="P"
            android:textSize="40dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/ok_button"
        style="@style/defaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_row"/>

</androidx.constraintlayout.widget.ConstraintLayout>