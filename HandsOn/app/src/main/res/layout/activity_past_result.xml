<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PastResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="기존 설문조사 결과"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_marginTop="30px"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="25px"
            android:layout_marginRight="25px"
            android:background="#246391"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="순번"
                android:gravity="center"></TextView>

            <View
                android:layout_width="10px"
                android:layout_height="match_parent"
                android:background="#246391"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="설문 타입"
                android:gravity="center"></TextView>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            android:background="#246391"></View>

        <ListView
            android:id="@+id/listview_pastresult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:fontFamily="@font/nanumsquare_acb"
            android:listSelector="@color/secondColor">

        </ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="25px"
            android:layout_marginRight="25px"
            android:background="#246391"></View>


        <Button
            android:id="@+id/temp"
            style="@style/defaultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:fontFamily="@font/nanumsquare_acb"
            android:text="자세히 보기"></Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>